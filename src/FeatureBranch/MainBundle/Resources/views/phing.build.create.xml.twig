<project default="git_clone">

  <target name="git_clone">
    <property name="repo.dir" value="{{ apache_root }}/{{ branch }}" />

    <!-- clone repository -->
    <gitclone
        repository="{{ repo_origin }}"
        targetPath="${repo.dir}" />

    <!-- create and switch to "mybranch" branch -->
    <gitcheckout
        repository="${repo.dir}"
        branchname="{{ branch }}" quiet="true" create="true" />
  </target>
</project>